{
    "rules": {
        "prefer-const": [true, {"destructuring": "any"}],
        "no-var-keyword": true,
        "object-literal-shorthand": true,
        "object-literal-key-quotes": [true, "as-needed"],
        "quotemark": [true, "single", "jsx-double"],
        "prefer-template": [true, "allow-single-concat"],
        "no-eval": true,
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always",
                "method": "never",
                "constructor": "never"
            }
        ],
        "no-parameter-reassignment": true,
        "prefer-object-spread": true,
        "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
        "arrow-return-shorthand": true,
        "arrow-parens": [true, "ban-single-arg-parens"],
        "ordered-imports": true,
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "ban": [
            true,
            {
                "name": "isFinite",
                "message": "use Number.isFinite instead"
            },
            {
                "name": "isNaN",
                "message": "use Number.isNaN instead"
            }
        ],
        "no-duplicate-imports": true,
        "no-default-export": true,
        "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
        "curly": [true, "ignore-same-line"],
        "comment-format": [true, "check-space", "check-lowercase"],
        "indent": [true, "spaces", 4],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never"}],
        "semicolon": [true, "always", "ignore-interfaces", "ignore-bound-class-methods"],
        "radix": true,
        "ban-types": [true, ["Object", "Use {} instead."], ["String"]],
        "member-access": [true, "no-public"],
        "no-magic-numbers": true,
        "no-namespace": true,
        "no-reference": true,
        "prefer-for-of": true,
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            },
            {
                "call-signature": "onespace",
                "index-signature": "onespace",
                "parameter": "onespace",
                "property-declaration": "onespace",
                "variable-declaration": "onespace"
            }
        ],
        "no-conditional-assignment": true,
        "no-construct": true,
        "no-duplicate-super": true,
        "no-duplicate-variable": [true, "check-parameters"],
        "no-empty": [true, "allow-empty-catch"],
        "no-for-in-array": true,
        "no-invalid-this": [true, "check-function-in-method"],
        "no-null-keyword": true,
        "no-string-literal": true,
        "prefer-conditional-expression": true,
        "restrict-plus-operands": true,
        "strict-boolean-expressions": true,
        "strict-type-predicates": true,
        "switch-default": true,
        "typeof-compare": true,
        "use-isnan": true,
        "cyclomatic-complexity": true,
        "linebreak-style": [true, "LF"],
        "max-classes-per-file": [true, 3],
        "max-line-length": [true, 100],
        "max-file-line-count": [true, 300],
        "eofline": true,
        "no-require-imports": true,
        "object-literal-sort-keys": [
            true,
            "match-declaration-order"
        ],
        "array-type": [true, "array"],
        "binary-expression-operand-order": true,
        "class-name": true,
        "import-spacing": true,
        "interface-name": [true, "always-prefix"],
        "interface-over-type-literal": true,
        "new-parens": true,
        "no-angle-bracket-type-assertion": true,
        "no-irregular-whitespace": true,
        "no-parameter-properties": true,
        "no-reference-import": true,
        "no-trailing-whitespace": true,
        "no-unnecessary-initializer": true,
        "number-literal-format": true,
        "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace"],
        "prefer-method-signature": true,
        "prefer-switch": true,
        "space-within-parens": 0,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-operator",
            "check-typecast",
            "check-module",
            "check-separator",
            "check-separator",
            "check-type",
            "check-operator",
            "check-preblock"
        ]
    }
}
